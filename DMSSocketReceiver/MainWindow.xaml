<Window x:Class="DMSSocketReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMSSocketReceiver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <DockPanel>
        <StackPanel Margin="0" HorizontalAlignment="Left" Width="109">
            <DockPanel Margin="3">
                <Label x:Name="lblPort" Margin="3" Content="Port:" Target="{Binding ElementName=edtPort, Mode=OneWay}"/>
                <TextBox x:Name="edtPort" TextWrapping="Wrap" Text="TextBox" Margin="3"/>
            </DockPanel>
            <Button x:Name="btnStartServer" Content="Server starten" Click="btnStartServer_Click" Margin="3"/>
            <Button x:Name="btnStopServer" Content="Server stoppen" Click="btnStopServer_Click" Margin="3"/>
            <Button x:Name="btnClearLog" Content="Log leeren" Margin="3" Click="btnClearLog_Click"/>
        </StackPanel>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" Margin="10" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
